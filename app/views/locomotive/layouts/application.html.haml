!!! XML
!!!
%html{ :xmlns => 'http://www.w3.org/1999/xhtml'  }
  %head
    = render 'admin/shared/head'
  %body{ :class => sections }
    #wrapper
      .container
        #header
          = render 'admin/shared/header'
          = render_cell 'admin/main_menu', :show

          #submenu
            %ul
              = yield :submenu

            - if content_for? :actions
              .action
                = yield :actions

        #content
          .inner
            %h2!= title

            #local-actions-bar
              &nbsp;
              = yield :buttons

            = yield

        #footer
          = render 'admin/shared/footer'