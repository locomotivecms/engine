%ul
  - @content.custom_fields.each do |field|
    %li
      %strong= field.label
      &nbsp;-&nbsp;
      %i
        - if field.file?
          = link_to File.basename(@content.send(field._name).url), @content.send(field._name).url
        - else
          = @content.send(field._alias)
